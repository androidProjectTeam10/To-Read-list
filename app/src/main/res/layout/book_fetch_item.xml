<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00A6FB">

        <ImageView
            android:id="@+id/bookImageIV"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/bookTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/bookImageIV"
            android:padding="3dp"
            android:text="Book Title"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/bookPublisherTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookTitleTV"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/bookImageIV"
            android:padding="3dp"
            android:text="Publisher"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/bookPageCountTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookPublisherTV"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/bookImageIV"
            android:padding="3dp"
            android:text="Page count"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/bookAverageRatingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookPageCountTV"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/bookImageIV"
            android:padding="3dp"
            android:text="Average rating"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/bookPublishedDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookAverageRatingTV"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:padding="3dp"
            android:text="Date Published"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>